# Production Environment Configuration
# Copy this file to .env and modify the values for your production environment

# Database Configuration
POSTGRES_DB=todoporunalma_db
POSTGRES_USER=todoporunalma_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_IN_PRODUCTION

# JWT Configuration - CHANGE THESE IN PRODUCTION
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_AND_SECURE_SECRET_KEY_FOR_PRODUCTION_AT_LEAST_256_BITS
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://todoporunalma.org,https://www.todoporunalma.org

# Logging Level
LOG_LEVEL=INFO

# Spring Profile
SPRING_PROFILE=production

# Domain Configuration
DOMAIN=todoporunalma.org
API_DOMAIN=api.todoporunalma.org

# SSL Configuration
SSL_EMAIL=admin@todoporunalma.org
